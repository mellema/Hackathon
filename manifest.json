{
  "name": "GroupedIn",
  "version": "0.0.2",
  "manifest_version": 2,
  "permissions": ["tabs", "<all_urls>"],
  "description": "LinkedIn Group Search Tool",
  "browser_action": {
    "default_icon": "compass-icon-19.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://www.linkedin.com/groups?viewMembers*"
      ],
      "js": ["popup.js"],
      "run_at": "document_end"         // pay attention to this line
    }
  ]
}